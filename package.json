{
	"name": "portal",
	"version": "1.0.0",
	"description": "",
	"main": "index.tsx",
	"author": "",
	"license": "ISC",
	"lint-staged": {
		"*.{js,jsx,ts,tsx,css,json,md}": [
			"prettier --write --log-level warn --ignore-unknown --plugin-search-dir=.",
			"git add"
		]
	},
	"scripts": {
		"prepare": "husky install",
		"clean:install": "rm -rf node_modules package-lock.json || true && npm cache clean --force && npm install",
		"format": "eslint --fix src/apps/editor && eslint --fix src/apps/engine && prettier --write .",
		"lint:lang": "node ./scripts/sort-language.js --check",
		"fix:lang": "node ./scripts/sort-language.js",
		"start:editor:mainnet": "NODE_ENV=development VITE_APP=editor VITE_AO=mainnet vite",
		"start:editor:legacy": "NODE_ENV=development VITE_APP=editor VITE_AO=legacy VITE_ARIO_TESTNET=true vite",
		"start:engine:mainnet": "NODE_ENV=development VITE_APP=engine VITE_AO=mainnet vite",
		"start:engine:legacy": "NODE_ENV=development VITE_APP=engine VITE_AO=legacy VITE_ARIO_TESTNET=true vite",
		"build:editor": "NODE_OPTIONS=--max-old-space-size=6144 NODE_ENV=production VITE_APP=editor VITE_AO=mainnet vite build",
		"build:engine": "NODE_OPTIONS=--max-old-space-size=6144 NODE_ENV=production VITE_APP=engine VITE_AO=mainnet vite build",
		"deploy:editor:main": "VITE_APP=editor npm run build:editor && permaweb-deploy --arns-name portal --ttl-seconds 60 --deploy-folder ./dist/editor",
		"deploy:editor:staging": "VITE_APP=editor npm run build:editor && permaweb-deploy --arns-name portalenv --ttl-seconds 60 --undername staging --deploy-folder ./dist/editor",
		"deploy:editor:branch": "VITE_APP=editor npm run build:editor && permaweb-deploy --arns-name portalenv --ttl-seconds 60 --undername $npm_config_branch --deploy-folder ./dist/editor",
		"deploy:engine": "VITE_APP=engine npm run build:engine && permaweb-deploy --arns-name portalenv --ttl-seconds 60 --undername engine --deploy-file ./dist/engine/bundle.js"
	},
	"dependencies": {
		"@ar.io/sdk": "^3.16.0-alpha.1",
		"@ardrive/turbo-sdk": "^1.30.0",
		"@hello-pangea/dnd": "^17.0.0",
		"@lexical/link": "^0.34.0",
		"@lexical/list": "^0.34.0",
		"@lexical/plain-text": "^0.34.0",
		"@lexical/react": "^0.34.0",
		"@lexical/rich-text": "^0.34.0",
		"@lexical/selection": "^0.34.0",
		"@lexical/utils": "^0.34.0",
		"@monaco-editor/react": "^4.7.0",
		"@permaweb/aoconnect": "https://arweave.net/5PSv2WQC8LIj6r8DgBGWLlHqLg-eDokcqzNmiTvVegg",
		"@permaweb/libs": "^0.0.60",
		"@stripe/react-stripe-js": "^3.5.1",
		"@stripe/stripe-js": "^6.1.0",
		"@wanderapp/connect": "^0.1.12",
		"arweave": "^1.15.5",
		"html-react-parser": "^5.2.5",
		"lexical": "^0.34.0",
		"react": "^18.2.0",
		"react-colorful": "^5.6.1",
		"react-dom": "^18.2.0",
		"react-json-tree": "^0.20.0",
		"react-markdown": "^8.0.7",
		"react-redux": "^7.2.9",
		"react-router-dom": "^6.4.2",
		"react-svg": "^15.1.11",
		"redux-persist": "^6.0.0",
		"redux-thunk": "^2.4.2",
		"styled-components": "^5.3.6",
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/react-router-dom": "^5.3.3",
		"@types/styled-components": "^5.1.26",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitejs/plugin-react": "^4.4.1",
		"eslint": "^8.35.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"husky": "^8.0.0",
		"permaweb-deploy": "2.3.0",
		"prettier": "^2.8.3",
		"rollup-plugin-polyfill-node": "^0.13.0",
		"rollup-plugin-visualizer": "^6.0.3",
		"terser": "^5.44.0",
		"vite": "^6.3.5",
		"vite-plugin-node-polyfills": "^0.23.0",
		"vite-plugin-pwa": "^1.0.3",
		"vite-plugin-singlefile": "^2.2.0"
	},
	"overrides": {
		"@dha-team/arbundles": "1.0.4"
	}
}
