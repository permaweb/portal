#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Ensure language.ts keys are sorted before commit
npm run fix:lang

# Optionally run format/lint
npm run format --silent || true

echo "pre-commit checks complete"

#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Only these extensions get formatted
ext='\.(js|jsx|ts|tsx|css|json|md)$'

# Get all staged files, filter by ext, skip deletions
# Use || true so grep doesn't exit with non-zero when no matches
staged=$(git diff --cached --name-only --diff-filter=ACM | grep -E "$ext" || true)

if [ -n "$staged" ]; then
  echo "✨ Formatting staged files..."
  echo "$staged"

  # Run prettier on them
  npx prettier --write $staged

  # Re-add any formatting changes
  echo "$staged" | xargs git add
else
  echo "✅ No staged files to format."
fi